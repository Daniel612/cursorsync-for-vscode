{
  "name": "cursorsync-for-vscode",
  "displayName": "CursorSync for VSCode",
  "description": "Open current line in Xcode",
  "version": "0.0.1",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorsync-for-vscode.openInXcode",
        "title": "Open in Xcode"
      }
    ],
    "keybindings": [
      {
        "command": "cursorsync-for-vscode.openInXcode",
        "key": "alt+o",
        "mac": "alt+o",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "CursorSync",
      "properties": {
        "cursorsync.openWithApp": {
          "type": "string",
          "default": "Xcode",
          "description": "The name of the application to open the file with (e.g., Xcode, Xcode beta)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
